# Application
DEBUG=false
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Observability
LOKI_URL=

# Celery/Worker
USE_CELERY=false
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_BACKEND_URL=redis://redis:6379/1

# Database
POSTGRES_DB=securet_flow
POSTGRES_USER=securet_user
POSTGRES_PASSWORD=change_me_strong
# Para TLS no Postgres (quando configurado), acrescente `?sslmode=require`
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
# DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?sslmode=require

# Redis
REDIS_PASSWORD=change_me_strong
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# JWT (use RS256 em produção)
JWT_ALGORITHM=HS256
JWT_SECRET_KEY=change-this-immediately
# Para RS256/ES256, forneça as chaves PEM abaixo:
# JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----\n"

# CORS
CORS_ORIGINS=["http://localhost:8080","https://localhost:8443"]

# Ollama (opcional)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_API_KEY=your-ollama-api-key
OLLAMA_MODEL=llama2

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000 