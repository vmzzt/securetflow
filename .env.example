# =============================================================================
# SECURET FLOW SSC - CONFIGURAÇÕES DE AMBIENTE
# =============================================================================

# =============================================================================
# CONFIGURAÇÕES PRINCIPAIS
# =============================================================================

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
LOG_LEVEL=info

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_GODFREDA_URL=http://localhost:3001

# =============================================================================
# BANCO DE DADOS
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql://securet_user:securet_pass@localhost:5432/securet_flow
POSTGRES_DB=securet_flow
POSTGRES_USER=securet_user
POSTGRES_PASSWORD=securet_pass

# Redis Cache
REDIS_URL=redis://localhost:6379

# =============================================================================
# AUTENTICAÇÃO E SEGURANÇA
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=3600

# =============================================================================
# GODOFREDA AI (MÓDULO OPCIONAL)
# =============================================================================

# Ativar/Desativar Godofreda
GODOFREDA_ENABLED=true
GODOFREDA_HOST=localhost
GODOFREDA_PORT=8001

# Configurações do LLM
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# =============================================================================
# FERRAMENTAS DE SEGURANÇA
# =============================================================================

# Nmap
NMAP_ENABLED=true
NMAP_TIMEOUT=300

# Nuclei
NUCLEI_ENABLED=true
NUCLEI_TIMEOUT=300

# =============================================================================
# DESENVOLVIMENTO
# =============================================================================

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# SCANNING
# =============================================================================

# Configurações de Scan
SCAN_CONCURRENT_LIMIT=5
SCAN_TIMEOUT=3600
SCAN_RETRY_ATTEMPTS=3
SCAN_RETRY_DELAY=60

# =============================================================================
# LOGS
# =============================================================================

# Logging
LOG_FILE_PATH=./logs/securet-flow.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10 