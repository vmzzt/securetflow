# =============================================================================
# SECURET FLOW SSC - CONFIGURAÇÕES DE AMBIENTE (EXEMPLO)
# =============================================================================

# Database
POSTGRES_DB=securetflow
POSTGRES_USER=securet_user
POSTGRES_PASSWORD=securet_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-immediately-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=30
JWT_REFRESH_EXPIRATION=604800

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# Ollama (opcional)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_API_KEY=your-ollama-api-key
OLLAMA_MODEL=llama2

# Development
DEBUG=true
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000 