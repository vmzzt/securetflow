# =============================================================================
# SECURET FLOW SSC - CONFIGURAÇÕES DE SEGURANÇA
# =============================================================================
# ⚠️  ATENÇÃO: Este arquivo contém informações sensíveis
# ⚠️  NUNCA commitar este arquivo no repositório
# ⚠️  Manter backup seguro das credenciais
# =============================================================================

# =============================================================================
# CONFIGURAÇÕES DE AMBIENTE
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# =============================================================================
# SEGURANÇA DA APLICAÇÃO
# =============================================================================

# JWT Configuration (Gerar com: openssl rand -hex 64)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-immediately-in-production-use-strong-random-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION=1800
JWT_REFRESH_EXPIRATION=604800

# Session Security
SESSION_SECRET_KEY=your-session-secret-key-change-this-immediately-in-production
SESSION_EXPIRATION=3600
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# =============================================================================
# BANCO DE DADOS
# =============================================================================

# PostgreSQL (Gerar com: openssl rand -base64 32)
POSTGRES_PASSWORD=your-super-secure-postgres-password-change-this-immediately
POSTGRES_USER=securet_user
POSTGRES_DB=securet_flow

# Redis (Gerar com: openssl rand -base64 32)
REDIS_PASSWORD=your-super-secure-redis-password-change-this-immediately

# =============================================================================
# SERVIÇOS DE IA
# =============================================================================

# Ollama Configuration
OLLAMA_API_KEY=your-ollama-api-key-change-this-immediately
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_ALLOWED_MODELS=llama3.2:3b,llama3.2:7b,llama3.2:13b

# OpenAI (Opcional)
OPENAI_API_KEY=your-openai-api-key-if-using-openai
ANTHROPIC_API_KEY=your-anthropic-api-key-if-using-anthropic

# =============================================================================
# APIs EXTERNAS
# =============================================================================

# Shodan
SHODAN_API_KEY=your-shodan-api-key-if-using-shodan

# VirusTotal
VIRUSTOTAL_API_KEY=your-virustotal-api-key-if-using-virustotal

# Censys
CENSYS_API_ID=your-censys-api-id-if-using-censys
CENSYS_API_SECRET=your-censys-api-secret-if-using-censys

# =============================================================================
# INTEGRAÇÕES
# =============================================================================

# Discord
DISCORD_TOKEN=your-discord-token-if-using-discord

# Slack
SLACK_BOT_TOKEN=your-slack-bot-token-if-using-slack

# Telegram
TELEGRAM_TOKEN=your-telegram-token-if-using-telegram

# =============================================================================
# EMAIL
# =============================================================================

SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_TLS=true

# =============================================================================
# MONITORAMENTO E LOGS
# =============================================================================

# Sentry (Opcional)
SENTRY_DSN=your-sentry-dsn-if-using-sentry

# LogDNA (Opcional)
LOGDNA_KEY=your-logdna-key-if-using-logdna

# =============================================================================
# TRAEFIK (API Gateway)
# =============================================================================

TRAEFIK_EMAIL=admin@securet-flow.com

# =============================================================================
# SEGURANÇA ADICIONAL
# =============================================================================

# CORS
ALLOWED_HOSTS=localhost,127.0.0.1,securet-flow.com,*.securet-flow.com

# File Upload Security
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=.txt,.json,.xml,.csv,.pdf,.zip,.tar.gz

# Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https:; connect-src 'self' https:; frame-ancestors 'none';

# =============================================================================
# COMPLIANCE
# =============================================================================

# GDPR
GDPR_ENABLED=true
DATA_RETENTION_DAYS=30
CONSENT_REQUIRED=true

# Audit
AUDIT_ENABLED=true
AUDIT_LOG_LEVEL=INFO

# =============================================================================
# BACKUP E RECUPERAÇÃO
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# DESENVOLVIMENTO (APENAS PARA DEV/TEST)
# =============================================================================

# Desabilitar em produção
# DEBUG=true
# LOG_LEVEL=DEBUG
# ENVIRONMENT=development 