# ================================
# GODOFREDA ENVIRONMENT VARIABLES
# ================================
# Copie este arquivo para .env e configure as variáveis
# ================================

# ================================
# API CONFIGURATION
# ================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
LOG_LEVEL=INFO
MAX_TEXT_LENGTH=1000

# ================================
# CORS SECURITY
# ================================
# Configure apenas os domínios permitidos em produção
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# ================================
# TTS CONFIGURATION
# ================================
TTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2
TTS_SPEAKER=p230
TTS_TEMP_DIR=app/tts_temp
COQUI_TOS_AGREED=1

# ================================
# OLLAMA LLM CONFIGURATION
# ================================
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama2:7b
OLLAMA_TIMEOUT=30
OLLAMA_MAX_RETRIES=3
OLLAMA_RETRY_DELAY=2

# ================================
# REDIS CACHE CONFIGURATION
# ================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================
# FILE MANAGEMENT
# ================================
MAX_FILE_SIZE_MB=100
CLEANUP_INTERVAL_HOURS=1
FILE_MAX_AGE_HOURS=1

# ================================
# MONITORING & SECURITY
# ================================
PROMETHEUS_ENABLED=true
METRICS_PORT=8000
HEALTH_CHECK_INTERVAL=30

# ================================
# GRAFANA SECURITY (CRITICAL)
# ================================
# Gere senhas seguras para produção
GRAFANA_PASSWORD=your_secure_grafana_password_here
GRAFANA_ADMIN_USER=admin

# ================================
# JWT SECURITY (CRITICAL)
# ================================
# Gere uma chave secreta forte para produção
JWT_SECRET=your_secure_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ================================
# RATE LIMITING
# ================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# ================================
# LOGGING
# ================================
LOG_FILE_PATH=app/logs/godofreda.log

# ================================
# FRONTEND
# ================================
FRONTEND_URL=http://localhost:3000

# ================================
# PRODUCTION SETTINGS
# ================================
# Descomente e configure para produção
# NODE_ENV=production
# REACT_APP_API_URL=https://your-api-domain.com
# REACT_APP_WS_URL=wss://your-api-domain.com/ws

# ================================
# WORKERS CONFIGURATION
# ================================
WORKERS=1

# ================================
# CACHE CONFIGURATION
# ================================
# TTL padrão do cache (segundos)
CACHE_TTL=3600

# Tamanho máximo do cache (MB)
CACHE_MAX_SIZE=100

# ================================
# RATE LIMITING
# ================================
# Limite de requisições por minuto (padrão)
RATE_LIMIT_DEFAULT=100

# Limite de requisições TTS por minuto
RATE_LIMIT_TTS=10

# Limite de requisições de chat por minuto
RATE_LIMIT_CHAT=30

# Limite de uploads por minuto
RATE_LIMIT_UPLOAD=5

# ================================
# FRONTEND CONFIGURATION
# ================================
# URL da API para o frontend
REACT_APP_API_URL=http://localhost:8000

# URL do Grafana
REACT_APP_GRAFANA_URL=http://localhost:3001

# URL do Prometheus
REACT_APP_PROMETHEUS_URL=http://localhost:9090

# URL do Portainer
REACT_APP_PORTAINER_URL=http://localhost:9000

# Ambiente Node.js
NODE_ENV=production

# Gerar source maps
GENERATE_SOURCEMAP=false

# ================================
# DEVELOPMENT CONFIGURATION
# ================================
# Habilitar reload automático
RELOAD=false

# ================================
# NOTAS DE USO
# ================================
# 1. Copie este arquivo para .env
# 2. Configure as variáveis conforme necessário
# 3. Nunca commite o arquivo .env no git
# 4. Use valores seguros em produção
# ================================ 